@model IEnumerable<TMP.Models.ProyekModel>

@{
    ViewBag.Title = "EntireProjectLecturer";
    Layout = "~/Views/Shared/_DashboardDosen.cshtml";
    int no = 0;
}

<h4 class="text-left bg-light p-2 mt-0 mb-3"> ENTIRE PROJECT </h4>

<table id="basic-datatable" class="table align-items-center mb-0 dataTable no-footer" role="grid" aria-describedby="basic-datatable_info" style="font-size:small;">
    <thead>
        <tr>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                No
            </th>
            @*<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                    @Html.DisplayNameFor(model => model.id_kel)
                </th>*@
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                Nama Proyek
            </th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                Semester
            </th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                PIC
            </th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                <div class="d-flex flex-column justify-content-center">
                    Status
                </div>
            </th>
        </tr>
    <thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.status == 1 || item.status == 0 || item.status == 2 || item.status == 3)
            {
                <tr>
                    <td>
                        <div class="d-flex px-2 py-1">
                            @(no += 1)
                        </div>
                    </td>
                    <td>
                        <div class="d-flex px-2 py-1">
                            <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.nama_proyek)</h6>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex px-2 py-1">
                            <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.semester)</h6>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex px-2 py-1">
                            <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.pic)</h6>
                            </div>
                        </div>
                    </td>
                    <td>
                        @if (item.status == 2)
                        {
                            <span class="badge bg-info">Menunggu Persetujuan Dosen/Instruktur</span>
                        }
                        else if (item.status == 3)
                        {
                            <span class="badge bg-success">Telah Disetujui</span>
                        }
                        else if (item.status == 1)
                        {
                            <span class="badge bg-primary">Menunggu Pengajuan Activity Plan oleh Mahasiswa</span>
                        }

                        else if (item.status == 0)
                        {
                            <span class="badge bg-secondary">Tidak Aktif</span>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

