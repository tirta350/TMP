@model List<TMP.Models.ChartModel>
@using TMP.Models

@{
    ViewBag.Title = "Dashboard Admin";
    Layout = "~/Views/Shared/_DashboardAdmin.cshtml";
    Dashboard_Admin dashboard_Admin = new Dashboard_Admin();
    IList<Dashboard_AdminModel> dashboard_Admins = dashboard_Admin.getAllData();
    Dashboard_AdminModel dash = new Dashboard_AdminModel();

}

<h4 class="text-left bg-light p-2 mt-0 mb-3">DASHBOARD</h4>
<div class="container">
    <div class="row p-2 mt-0 mb-3">
        <div class="col">
            <div class="card-body bg-gray-100">
                <h5 class="card-title" style="color: blue;">Jumlah Proyek</h5>
                <h1 class="align-self-center mb-0" style="line-height: 1; color: blue;">@ViewBag.TotalProjects</h1>
                <br />
                <div class="d-flex align-items-center mb-2">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center" style="background-color: blue;">
                        <!-- Mengganti kelas ikon dengan kelas ikon warna biru -->
                        <i class="ni ni-check-bold" style="color: white;"></i>
                    </div>
                    <div class="ps-3">
                        <a href="@Url.Action("EntireProject", "Dashboard")" class="small-box-footer" style="color: blue;">Detail <i class="bi bi-arrow-right-circle" style="color: blue;"></i></a>
                    </div>
                </div>
            </div>
        </div>


        <div class="col">
            <div class="card-body bg-gray-100">
                <h5 class="card-title" style="color: green;">Proyek Berjalan</h5>
                <h1 class="align-self-center mb-0" style="line-height: 1; color: green;">@ViewBag.OnProgressProjects</h1>
                <br />
                <div class="d-flex align-items-center mb-2">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center" style="background-color: green;">
                        <i class="ni ni-chart-bar-32" style="color: white;"></i>
                    </div>
                    <div class="ps-3">
                        <a href="@Url.Action("OnProgressProject", "Dashboard")" class="small-box-footer" style="color: green;">Detail <i class="bi bi-arrow-right-circle" style="color: green;"></i></a>
                    </div>
                </div>
            </div>
        </div>


        <div class="col">
            <div class="card-body bg-gray-100">
                <h5 class="card-title" style="color: red;">Proyek Bermasalah</h5>
                <h1 class="align-self-center mb-0" style="line-height: 1; color: red;">@ViewBag.NeedAttentionProject</h1>
                <br />
                <div class="d-flex align-items-center mb-2">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="ni ni-sound-wave" style="color: red;"></i>
                    </div>
                    <div class="ps-3">
                        <a href="@Url.Action("NeedAttentionProject", "Dashboard")" class="small-box-footer" style="color: red;">Detail <i class="bi bi-arrow-right-circle"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




    </div>
</div><!-- End Sales Card -->

