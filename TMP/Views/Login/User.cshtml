@model TMP.Models.UserModel

@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <p>@TempData["ErrorMessage"]</p>
}
else if (TempData["Direct"] != null)
{
    <p>@TempData["Direct"]</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextBoxFor(m => m.username, new { @class = "form-control rounded-left", @id = "yourUsername", @placeholder = "Username", @required = "required" })
        @*<input id="username" name="username" asp-for="user" type="text" class="form-control rounded-left" placeholder="Username" required>*@
    </div>
    <div>&nbsp;</div>
    <div class="form-group d-flex">
        @Html.PasswordFor(m => m.password, new { @class = "form-control rounded-left", @id = "yourPassword", @placeholder = "Password", @required = "required" })
        @*<input id="password" name="password" type="password" class="form-control rounded-left" placeholder="Password" required>*@
    </div>
    <div>&nbsp;</div>
    <input type="checkbox" id="toggle-password" />
    <label for="toggle-password">Lihat password</label>
    <div>&nbsp;</div>
    <div class="form-group">
        <button type="submit" class="btn btn-blue w-100" value="Masuk">Masuk</button>
    </div>
    <div class="form-group d-md-flex">
        <div class="w-50">
        </div>
    </div>
}