@model TMP.Models.ProdiModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashboardAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h5 class="text-center bg-gray-100 p-2 mt-0 mb-3" style="font-family: 'Ashbury', sans-serif;">TAMBAH DATA PROGRAM STUDI</h5>

    <a href="@Url.Action("Index", "Prodi")">
        <i class="fa fa-chevron-circle-left"></i> Kembali
    </a>

    <div class="container-fluid ">
        <div class="bg-outline-primary">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group col-8">
            <label class="col-form-label">Program Studi<span style="color: red">*</span></label>
            <div class="input-group mb-3">
                @Html.EditorFor(model => model.nama_prodi, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.nama_prodi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-o">
                <input type="submit" style="float:right" value="Simpan" class="btn btn-primary rounded-pill waves-effect waves-light" />
            </div>
        </div>
    </div>
    </div>
}
