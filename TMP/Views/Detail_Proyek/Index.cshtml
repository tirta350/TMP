@model List<TMP.Models.ProyekModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardMahasiswa.cshtml";
    int no = 0;
}

<h4 class="text-left bg-gray-100 p-2 mt-0 mb-3" style="font-family: 'Ashbury', sans-serif;">ACTIVITY PLAN</h4>

<div class="card-header pb-0">
    <div class="text-lg-end my-1 my-lg-0">
        @Html.ActionLink("Tambah Data", "Create", null, new { @class = "btn btn-primary  btn-sm", style = "font-size: 17px;; font-family: Arial;" })
    </div>
</div><!-- end col-->

<table id="basic-datatable" class="table align-items-center mb-0 dataTable no-footer" role="grid" aria-describedby="basic-datatable_info" style="font-size: 15px;">
    <thead>
        <tr>
            <th style="width:8%; text-align: center;">
                <strong>@Html.DisplayName("No")</strong>
            </th>
            <th style="text-align: center;">
                <strong>@Html.DisplayName("Nama Proyek")</strong>
            </th>
            <th style="text-align: center;">
                <strong>@Html.DisplayName("Semester")</strong>
            </th>
            <th style="text-align: center;">
                <strong>@Html.DisplayName("Status")</strong>
            </th>
            <th style="text-align: center;">
                <strong>Aksi</strong>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div style="text-align: center;">
                         @(no += 1) 
                    </div>
                </td>
                <td>
                    <div style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.nama_proyek) 
                    </div>
                </td>
                <td>
                    <div style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.semester)
                    </div>
                </td>
                <td>
                    <div style="text-align: center;">
                        @if (item.status == 2)
                        {
                            <span class="badge bg-primary">Menunggu Persetujuan Dosen/Instruktur</span>
                        }
                        else if (item.status == 3)
                        {
                            <span class="badge bg-info">Telah Disetujui</span>
                        }
                        else if (item.status == 1)
                        {
                            <span class="badge bg-danger">Menunggu Pengajuan Activity Plan oleh Mahasiswa</span>
                        }
                    </div>
                </td>
                <td style="text-align: center;">
                    <a href="@Url.Action("Detail", "Detail_Proyek", new { id=item.id_proyek })" class="badge bg-info " data-toggle="tooltip" data-placement="top" title="Detail Data">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>

