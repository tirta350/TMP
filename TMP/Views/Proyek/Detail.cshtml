@model TMP.Models.ProyekModel
@using TMP.Models

@{
    /**/

    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_DashboardDosen.cshtml";
    int no = 0;

    Proyek proyek = new Proyek();
    IList<Detail_MatkulModel> proyeks = proyek.getAllDataDetail(Model.id_proyek);
}

<h5 class="text-center bg-gray-100 p-2 mt-0 mb-3" style="font-family: 'Ashbury', sans-serif; text-transform: uppercase;">DETAIL PROYEK | @Html.DisplayFor(model => model.nama_proyek)</h5>

<div class="col-auto">
    <a href="@Url.Action("Index", "Proyek")" style="font-family: Arial;">
        <i class="fa fa-chevron-circle-left"></i> Kembali
    </a>
</div>
<br />

<div>

    <ul class="list-group">
        <li class="list-group-item border-0 d-flex p-2 mb-1 bg-gray-100 border-radius-lg">
            <div class="col-md-6">
                @*<h4 class="text-dark font-weight-bold ms-sm-2">@Html.DisplayFor(model => model.nama_proyek)</h4>*@

                <div class="row">
                    <div class="col-md-3">
                        @Html.Label("Kelompok", htmlAttributes: new { @class = "control-label", style = "font-size: 15px;" })
                    </div>
                    <div class="col-sm-6">
                        : @Html.DisplayFor(model => model.namakel, new { htmlAttributes = new { @class = "control-label", style = "font-size: 14px;" } })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.Label("Semester", htmlAttributes: new { @class = "control-label", style = "font-size: 15px;" })
                    </div>
                    <div class="col-md-3">
                        : @Html.DisplayFor(model => model.semester, new { htmlAttributes = new { @class = "control-label", style = "font-size: 14px;" } })
                    </div>
                </div>

            </div>

            <div class="col-md-6">

                <div class="row">
                    <div class="col-sm-4">
                        @Html.Label("Tanggal Mulai", htmlAttributes: new { @class = "control-label", style = "font-size: 15px;" })
                    </div>
                    <div class="col-md-3">
                        : @Html.DisplayFor(model => model.tanggal_mulai, new { htmlAttributes = new { @class = "control-label", style = "font-size: 14px;" } })
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-4">
                        @Html.Label("Tanggal Selesai", htmlAttributes: new { @class = "control-label", style = "font-size: 15px;" })
                    </div>
                    <div class="col-md-3">
                        : @Html.DisplayFor(model => model.target, new { htmlAttributes = new { @class = "control-label", style = "font-size: 14px;" } })
                    </div>
                </div>

            </div>
        </li>


    </ul>
</div>

<br />

<div class="row">
    <div class="col md-8">
        <div class="d-flex align-items-start">
            <i class="mdi mdi-account-outline font-18 text-success me-1"></i>
            <div class="w-100">
                <span class="text-dark ms-sm-1 font-weight-bold">Mata Kuliah Terkait : </span>
            </div>
        </div>
        @*<h6 class="text-center bg-light p-2 mt-0 mb-3"> MATA KULIAH TERKAIT</h6>*@

        <table id="datatable" class="table datatable table-hover" style="font-size: 15px;">
            <thead class="table-light">
                <tr>
                    <th style="width:8%; text-align: center;">
                        <strong>@Html.DisplayName("No")</strong>
                    </th>
                    <th style="text-align: center;">
                        <strong>@Html.DisplayName("Mata Kuliah")</strong>
                    </th>
                    <th style="text-align: center;">
                        <strong>@Html.DisplayName("Dosen Pengampu")</strong>
                    </th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in proyeks)
                {
                <tr>
                    <td style="text-align: center;">
                        @(no += 1)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.nama_matkul)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.matkuldosennama)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>