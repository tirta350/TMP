@model TMP.Models.MatkulModel
@using TMP.Models

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashboardAdmin.cshtml";
    Prodi _prodi = new Prodi();
    IList<ProdiModel> prodis = _prodi.getAllData();

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h5 class="text-center bg-gray-100 p-2 mt-0 mb-3" style="font-family: 'Ashbury', sans-serif;">TAMBAH DATA MATA KULIAH</h5>

    <a href="@Url.Action("Index", "Matkul")">
        <i class="fa fa-chevron-circle-left"></i> Kembali
    </a>
    <hr />

     <div >

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
            <div class="form-group row">
                <div class="form-group col-10">
                    <label class="col-form-label">Program Studi<span style="color: red">*</span></label>
                    <div class="input-group mb-2">
                        @Html.DropDownListFor(model => model.id_prodi, new SelectList(prodis, "id_prodi", "nama_prodi"), "Pilih Program Studi", new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.id_prodi, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-5">
                    <label class="col-form-label">Mata kuliah<span style="color: red">*</span></label>
                    <div class="input-group mb-2">
                        @Html.EditorFor(model => model.nama_matkul, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.nama_matkul, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-5">
                    <label class="col-form-label">Dosen Pengampu<span style="color: red">*</span></label>
                    <div class="input-group mb-2">
                        @Html.EditorFor(model => model.dosen_pengampu, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.dosen_pengampu, "", new { @class = "text-danger" })
                </div>
                <br />

                <div class="form-group">
                    <div class="col-md-offset-0 col-md-0">
                        <input onclick="return confirm('Apakah anda ingin menambah data ini?')" type="submit" style="float:right" value="Simpan" class="btn btn-primary rounded-pill waves-effect waves-light" />
                    </div>
                </div>
            </div>
     </div>
}

