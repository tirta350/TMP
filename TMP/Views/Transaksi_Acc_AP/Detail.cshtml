@model TMP.Models.Detail_ProyekModel
@using TMP.Models

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_DashboardDosen.cshtml";
    int no = 0;

    Detail_Proyek _detail = new Detail_Proyek();
    IList<Detail_ProyekModel> details = _detail.getAllDataDetail(Model.id_proyek);
}

<h4 class="text-center bg-gray-100 p-2 mt-0 mb-3" style="font-family: 'Ashbury', sans-serif; text-transform: uppercase;">DETAIL ACTIVITY PLAN | @Html.DisplayFor(model => model.nama_proyek)</h4>
<div class="col-auto">
    <a href="@Url.Action("Index", "Transaksi_Acc_AP")">
        <i class="fa fa-chevron-circle-left"></i> Kembali
    </a>
</div>
<hr />


<table id="basic-datatable" class="table align-items-center mb-0 dataTable no-footer" role="grid" aria-describedby="basic-datatable_info" style="font-size: 15px;">
    <thead>
        <tr>
            <th style="width:8%; text-align: center;">
                <strong>@Html.DisplayName("No")</strong>
            </th>
            <th style="text-align: center;">
                <strong>@Html.DisplayNameFor(model => model.nama_kegiatan)</strong>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in details)
        {
            <tr>
                <td>
                    <div style="text-align: center;">
                        @(no += 1)
                    </div>
                </td>
                <td>
                    <div style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.nama_kegiatan)
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
